{
    "name": "Xell",
    "description": "A self-custodial crypto wallet built as a browser extension",
    "version": "2.0.3",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Xell"
    },
    "icons": {
        "16": "images/favicon-16x16.png",
        "32": "images/favicon-32x32.png",
        "128": "images/android-chrome-192x192.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "images/*",
                "injection.js",
                "process.js",
                "dummy/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "externally_connectable": {
        "matches": [
            "<all_urls>"
        ],
        "accepts_tls_channel_id": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}