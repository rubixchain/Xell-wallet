{
    "name": "Xell Extension",
    "description": "A self-custodial crypto wallet built as a browser extension",
    "version": "1.0.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_192.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "assets/*",
        "icons/*",
        "injected.js"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module",
        "persistent": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{EXTENSION_ID}",
            "strict_min_version": "57.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}